          <script>
            function editCoupon(couponId) {
              console.log("clicked", couponId);
              $.ajax({
                url: "/editCoupon/" + couponId,
                method: 'GET',
              })
                .done((response) => {
                  if (response) {
                    document.getElementById('couponNme').value = response.couponData.couponName;
                    document.getElementById('couponAmont').value = response.couponData.discount;
                    document.getElementById('couponExpiring').value = response.couponData.expiryDate;
                    document.getElementById('couponId').value = response.couponData._id;
        
                    $("#editCoupon").modal("show");
        
                  }
                })
                .fail((error) => {
                  console.log(error);
                })
        
            }
          </script>
        
        
          <script>
            function deleteCoupon(couponId) {
              console.log(couponId);
              Swal.fire({
                title: 'Are you sure?',
                text: 'Do you want to delete this coupon?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes !',
                cancelButtonText: 'Cancel',
                reverseButtons: true,
              }).then((response) => {
                console.log(response);
                if (response.isConfirmed) {
                  $.ajax({
                    url: "/deleteCoupon/" + couponId,
                    method: 'DELETE',
                  }).done(response => {
                    Swal.fire("Successfull", `${response.message}`, "success").then(() => {
                      location.reload();
                    })
                  }).fail((error) => {
                    Swal.fire("Successfull", `${error.message}`, "success").then(() => {
                      location.reload()
                    })
                  })
                }
              })
        
            }
          </script>
        
