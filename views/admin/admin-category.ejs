                        duration: 3000, // 3 seconds
                        gravity: "top", // Display at the top of the screen
                        position: "center", // Centered horizontally
                        backgroundColor: "green", // Set the background color to green
                    }).showToast();
                    // Handle success, e.g., close the modal and refresh the page
                    $("#editCategoryModal").modal("hide");
                    setTimeout(() => {
                        location.reload();
                    }, 1000);

                },
                error: (xhr, status, error) => {
                    console.log(error);
                    // Handle the error and provide user feedback if necessary
                }
            });
        })
    </script>


    <script>
        ///////////////////ADD CATEGORY////////////////////
        document.getElementById("categoryForm").addEventListener("submit", function (event) {
            event.preventDefault();
            let formData = $(this).serialize();
            $.ajax({
                url: "/addCategory",
                method: "PUT",
                data: formData,
                success: (response) => {
                    Toastify({
                        text: "Category Added",
                        duration: 3000, // 3 seconds
                        gravity: "top", // Display at the top of the screen
                        position: "center", // Centered horizontally
                        backgroundColor: "green", // Set the background color to green
                    }).showToast();
                    console.log(response);
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                },
                error: (XHR, error) => {
                    console.log(error);

                }

            })
        });

        function listUnlistCat(id, clicked, name) {
            // Display a confirmation message
            Swal.fire({
                title: 'Are you sure?',
                text: `You are about to ${clicked === 'unlist' ? 'unlist' : 'list'} ${name}?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: `Yes, ${clicked}!`
            }).then((result) => {
                if (result.isConfirmed) {
                    // User clicked "Yes, block!" - proceed with blocking
                    $.ajax({
                        url: `/listUnlist?id=${id}`,
                        method: 'PATCH',
                        contentType: 'application/json',
                        success: function (data) {
                            if (data.success) {
                                // Display success message after blocking
                                Swal.fire({
                                    title: `User ${clicked}ed!`,
                                    text: `${name} has been ${clicked}ed successfully.`,
                                    icon: 'success',
                                }).then(() => {
                                    // Reload the page
                                    location.reload();
                                });
                            }
                        }
                    });
                }
            });
        }




