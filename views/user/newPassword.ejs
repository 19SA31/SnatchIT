<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Snatch It.</title>
    <link rel="shortcut icon" type="image/x-icon" href="/public/user-assets/images/SnatchIt_logo-removebg-preview.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="public/user-assets/css/style.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Alef:wght@400;700&display=swap">

</head>

<body>
    <style>
        body {
            font-family: 'Alef', sans-serif;
        }
    </style>
    <section class="gradient-custom">
        <div class="align-items-center">
            <img src="public/user-assets/images/SnatchIt_logo.png" alt="no image " class="image">
        </div>
        <div class="container py-5 h-100 pt-1">

            <div class="row d-flex justify-content-center align-items-center h-100">
                <h2 class="fw-bold  mb-2 text-uppercase text-center">Enter New Password</h2>
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card background-color  text-white"
                        style=" border-radius: 1rem;background-color: #2B1754 !important;">
                        <div class="card-body p-5 text-center">
                            <div class="mb-md-5 mt-md-2 pb-0">
                                <% if (message) { %>
                                    <div class="text-center text-success" style="display: block;">
                                        <%= message %>
                                    </div>
                                    <% } %>
                                        <form action="/newPassword" method="post" id="myForm">
                                            <div class="form-group">
                                                <input id="password1" type="password" required="" name="password1"
                                                    placeholder="New password">
                                                <div id="error1"></div>
                                            </div>
                                            <div></div>
                                            <div class="form-group ">
                                                <input id="password2" type="password" name="password2"
                                                    placeholder="Confirm new password">
                                                <div id="error2"></div>
                                            </div>

                                            <div class="form-group">
                                                <button type="submit" class="btn btn-fill-out"
                                                    name="savepass">save</button>
                                            </div>
                                        </form>


                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <script src="../public/user-assets/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>

    <script>
        const pass1 = document.getElementById('password1');
        const pass2 = document.getElementById('password2');
        const error1 = document.getElementById('error1');
        const error2 = document.getElementById('error2');
        const myForm = document.getElementById('myForm')


        function passvalidate(e) {
            const passval = pass1.value
            const alpha = /[a-zA-Z]/
            const digit = /\d/


            error1.innerHTML = '';



            if (passval.length < 8) {
                error1.style.display = "block"
                error1.innerHTML = "Must have atleast 8 characters"
                return false;
            }
            else if (!alpha.test(passval) || !digit.test(passval)) {
                error1.style.display = "block"
                error1.innerHTML = "Should contain Numbers and Alphabets!!"
                return false;
            }
            else {

                error1.style.display = "none"
                error1.innerHTML = ""
                return true;
            }
        }

        function passmatch() {

            error2.innerHTML = '';
            if (pass1.value != pass2.value) {

                error2.style.display = "block"
                error2.innerHTML = "password doesn't match"
                return false;
            }
            return true;


        }



        pass1.addEventListener('blur', passvalidate)

        myForm.addEventListener('submit', function (e) {

            const checkk = passvalidate();

            const check = passmatch();

            if (!check || !checkk) {
                e.preventDefault();
            }





        })

    </script>
</body>

</html>